# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# IMPORTANT: Never commit your actual MongoDB URI!
# Create a new database user with limited permissions for production
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# Security Secrets
# CRITICAL: Generate strong, random secrets using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# NEVER use placeholder values in production!
JWT_SECRET=REPLACE_WITH_STRONG_RANDOM_64_CHAR_SECRET
SESSION_SECRET=REPLACE_WITH_STRONG_RANDOM_64_CHAR_SECRET

# Google OAuth Configuration
# Get credentials from: https://console.cloud.google.com/apis/credentials
# IMPORTANT: Keep these secret! Never commit actual values!
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Frontend URLs
# CORS whitelist automatically includes:
# - http://localhost:3000 (local dev)
# - http://localhost:3001 (backup dev port)
# - https://claraf.vercel.app (production Vercel)
# You can add an additional custom origin here if needed:
FRONTEND_URL=http://localhost:3000

# Cloudinary Configuration
# Get credentials from: https://cloudinary.com/console
# IMPORTANT: These provide full access to your media library!
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here
